generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model user {
    id           String   @id @default(cuid())
    email        String   @unique
    password     String?
    token        String
    isSuperAdmin Boolean  @default(false)
    createdAt    DateTime @default(now()) @map(name: "created_at")
    updatedAt    DateTime @updatedAt @map(name: "updated_at")

    @@map(name: "users")
}

model message {
    id         String   @id @default(cuid())
    sender     String
    category   Category
    object     String
    text       String
    isFavorite Boolean  @default(false)
    createdAt  DateTime @default(now()) @map(name: "created_at")

    @@map(name: "messages")
}

model apitoken {
    id         String   @id @default(cuid())
    token      String
    expiration DateTime

    @@map(name: "api_tokens")
}

model collection {
    id        String   @id @default(cuid())
    name      String
    number    Int
    createdAt DateTime @default(now()) @map(name: "created_at")
    updatedAt DateTime @updatedAt @map(name: "updated_at")

    @@map(name: "collections")
}

enum Category {
    COMMENT
    QUESTION
    PARTNERSHIP
    LOCATION
    OTHER
}
